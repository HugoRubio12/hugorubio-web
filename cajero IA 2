<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cajero con IA</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="container text-center mt-5">
    <h1 class="mb-4">ğŸ¦ Cajero con IA</h1>
    <p>Saldo actual: <strong id="saldo">$1000</strong></p>
    <button class="btn btn-success" onclick="depositar()">ğŸ’° Depositar</button>
    <button class="btn btn-danger" onclick="retirar()">ğŸ’¸ Retirar</button>

    <script>
        let saldo = 1000;

        function actualizarSaldo() {
            document.getElementById("saldo").innerText = `$${saldo}`;
        }

        function depositar() {
            Swal.fire({
                title: 'Ingrese el monto a depositar',
                input: 'number',
                inputAttributes: { min: 1 },
                showCancelButton: true,
                confirmButtonText: 'Depositar'
            }).then((result) => {
                if (result.value) {
                    saldo += parseFloat(result.value);
                    actualizarSaldo();
                    Swal.fire('DepÃ³sito exitoso', '', 'success');
                }
            });
        }

        function retirar() {
            Swal.fire({
                title: 'Ingrese el monto a retirar',
                input: 'number',
                inputAttributes: { min: 1 },
                showCancelButton: true,
                confirmButtonText: 'Retirar'
            }).then((result) => {
                if (result.value) {
                    let monto = parseFloat(result.value);
                    if (monto > saldo) {
                        Swal.fire('Saldo insuficiente', '', 'error');
                    } else {
                        saldo -= monto;
                        actualizarSaldo();
                        Swal.fire('Retiro exitoso', '', 'success');
                    }
                }
            });
        }
    </script>
</body>
</html>
